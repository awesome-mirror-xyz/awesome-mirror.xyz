{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Article",
    "type": "object",
    "properties": {
        "mirror": {
            "type": "object",
            "title": "Mirror",
            "properties": {
                "name": {
                    "type":"string",
                    "description": "the mirror name"
                },
                "website": {
                    "type": "string",
                    "description": "URI of mirror blog website"
                },
                "tags": {
                    "type": "array",
                    "description": "Tags of the mirror",
                    "items": {
                        "type": "string",
                        "description": "Tag name"
                    }
                },
                "language": {
                    "type":"string",
                    "description": "the mirror language"
                },
                "authorAvatar": {
                    "type":"string",
                    "description": "the mirror author avatar"
                }
            }
        },
        "title": {
            "type":"string",
            "description": "the article title"
        },
        "link": {
            "type":"string",
            "description": "the article link"
        },
        "content": {
            "type":"string",
            "description": "the article content"
        },
        "date": {
            "type":"string",
            "description": "the article build date"
        },
        "articelId": {
            "type":"string",
            "description": "the article id"
        },
        "language": {
            "type":"string",
            "description": "the article language"
        },
        "like": {
            "type": "array",
            "description": "ppl's dids who like the article",
            "items": {
                "type": "string",
                "description": "did"
            },
            "default": []
        }
    }
}
  